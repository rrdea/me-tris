<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBeranda">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerDestinasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:background="@android:color/transparent"
        android:id="@+id/beranda_ib_pesan"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableTop="@drawable/ic_pesan"
        android:text="Pesan Tiket"
        app:layout_constraintBottom_toBottomOf="@+id/viewPagerDestinasi"
        app:layout_constraintEnd_toEndOf="@+id/viewPagerDestinasi"
        app:layout_constraintStart_toStartOf="@+id/viewPagerDestinasi" />

</android.support.constraint.ConstraintLayout>